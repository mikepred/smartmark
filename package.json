{
  "name": "smartmark",
  "version": "1.0.0",
  "description": "An intelligent Chrome extension for automatic bookmark organization",
  "main": "background.js",  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:e2e": "playwright test --reporter=list",
    "lint": "echo 'Linting placeholder - add ESLint when ready'",
    "package": "node scripts/package.js",
    "validate": "node scripts/validate.js"
  },
  "keywords": [
    "chrome-extension",
    "bookmarks",
    "ai",
    "organization"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.53.0",
    "@types/chrome": "^0.0.268",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.53.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "utils/**/*.js",
      "!utils/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/utils/**/*.test.js"
    ]
  }
}
